<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('includes/navigation.ejs') %>
    <% if(!tofridge){ %>
    <div style="padding:20px;">
        <a href="/add-item" class="btn">Add Item</a>
    </div>
    <% } %>
            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.name %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= product.date_of_purchase %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.expire_after %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="item/<%= product.item_id %>" class='btn'>Details</a>
                                    <% if(tofridge) { %>
                                    <%- include('includes/add-to-fridge.ejs',{prodId: product.item_id})%>
                                        <% } %>
                                </div>
                                 <a href="/edit-item/<%= product.item_id%>?edit=true" class="btn">Edit</a>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('includes/end.ejs') %>