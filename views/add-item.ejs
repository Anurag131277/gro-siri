<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/add-item" method="POST">
            <div class="form-control">
                <label for="title">Name</label>
                <input type="text" name="name" id="title" value="">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="">
            </div>
            <div class="form-control">
                <label for="price">Date of Purchase</label>
                <input type="date" name="dof" id="dof" step="0.01" value="">
            </div>
            <div class="form-control">
                <label for="description">Expire After</label>
                <textarea name="expire_after" id="expireday" rows="5"></textarea>
            </div>
            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
<%- include('includes/end.ejs') %>